<% if @errors %>
  <h2>The following errors prevented the todo from being saved</h2>
  <p><%= @error %></p>
<% end %>

<%= form_for @todo do |f| %>
  <p>
    <%= f.label :nome %> <br>
    <%= f.text_field :nome %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to todos listing", todos_path %>
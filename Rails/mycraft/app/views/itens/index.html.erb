<div class="background">
  <div class="inner-div">
    <%= render 'shared/page_title', title: "Itens disponÃ­veis" %>
    
    <div align="center">
      <%= will_paginate %>
      <% @itens.each do |item| %>
        <ul class="listitem">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li class="chef-title"><%= link_to item.name.capitalize, item_path(item) %></li>
              <li>
                <small>
                  <% if item.postagens.count == 1 %>
                    <%= "#{item.postagens.count} postagem" %>
                  <% else %>
                    <%= "#{item.postagens.count} postagens" %>
                  <% end %>
                </small>
              </li>
              <% if logged_in? && current_jogador.admin? %>
                <li class="button-edit btn btn-xs btn-warnitem"><%= link_to "Editar item", edit_item_path(item) %></li>
                <li class="button-edit btn btn-xs btn-danger"><%= link_to "Excluir item", item_path(item), method: :delete,
                    data: { confirm: "Tem certeza de que deseja excluir esta postagem?" } %></li>
              <% end %>
            </div>
          </div>
        </ul>
      <% end %>
      <%= will_paginate %>
    </div>
  </div>
</div>
<div class="background">
  <div class="inner-div">
    <%= render 'shared/page_title', title: "Itens disponÃ­veis" %>
    
    <div align="center">
      <%= will_paginate %>
      <% @ingredients.each do |ing| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li class="chef-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
              <li>
                <small>
                  <% if ing.recipes.count == 1 %>
                    <%= "#{ing.recipes.count} postagem" %>
                  <% else %>
                    <%= "#{ing.recipes.count} postagens" %>
                  <% end %>
                </small>
              </li>
              <% if logged_in? && current_chef.admin? %>
                <li class="button-edit btn btn-xs btn-warning"><%= link_to "Editar item", edit_ingredient_path(ing) %></li>
                <li class="button-edit btn btn-xs btn-danger"><%= link_to "Excluir item", ingredient_path(ing), method: :delete,
                    data: { confirm: "Tem certeza de que deseja excluir esta postagem?" } %></li>
              <% end %>
            </div>
          </div>
        </ul>
      <% end %>
      <%= will_paginate %>
    </div>
  </div>
</div>
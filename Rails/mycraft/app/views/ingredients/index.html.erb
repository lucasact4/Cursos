<%= render 'shared/page_title', title: "Available Ingredients" %>

<div align="center">
  <%= will_paginate %>
  <% @ingredients.each do |ing| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
          <li>
            <small>
              <% if ing.recipes.count == 1 %>
                <%= "#{ing.recipes.count} postagem" %>
              <% else %>
                <%= "#{ing.recipes.count} postagens" %>
              <% end %>
            </small>
          </li>
          <% if logged_in? && current_chef.admin? %>
            <li><%= link_to "Editar", edit_ingredient_path(ing) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
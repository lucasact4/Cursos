<div class="background">
  <div class="inner-div">
    <%= render 'shared/page_title', title: "Mostrando todos os jogadores" %>
    
    <div align="center">
      <%= will_paginate %>
      <% @chefs.each do |chef| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
              <li class="chef-title"><%= link_to chef.chefname.capitalize, chef_path(chef) %></li>
              <li>
                <small>
                  <% if chef.recipes.count == 1 %>
                    <%= "#{chef.recipes.count} postagem" %>
                  <% else %>
                    <%= "#{chef.recipes.count} postagens" %>
                  <% end %>
                </small>
              </li>
              <% if logged_in? && current_chef.admin? && !chef.admin? %>
                <li class="button-edit"><%= link_to "Excluir jogador", chef_path(chef), method: :delete,
                      data: {confirm: "Tem certeza de que deseja excluir o jogador e todas as postagens associadas?"} %></li>
              <% end %>
            </div>
          </div>
        </ul>
      <% end %>
      <%= will_paginate %>
    </div>
  </div>
</div>
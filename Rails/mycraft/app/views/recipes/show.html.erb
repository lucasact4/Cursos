<%= render 'shared/page_title', title: @recipe.name %>

<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong class="font-title">Conteúdo: </strong></h4>
  <br />
  <span class="font-paragraph2"><%= simple_format(@recipe.description) %></span>
  <br />
  <% if @recipe.ingredients.any? %>
    <p class="font-title">Itens: <%= render @recipe.ingredients %></p>
  <% end %>
  <div class="pull-right">
    <p class="center">
      <em class="font-paragraph">Criado por:</em>
    </p>
    <p class="center">
      <%= link_to gravatar_for(@recipe.chef), chef_path(@recipe.chef) %>
    </p>
    <p class="center paragraph">
      <small><%= @recipe.chef.chefname.capitalize %></small>
      <div class="pull-right font-paragraph">há <%= time_ago_in_words(@recipe.created_at, include_seconds: true, locale: 'pt-BR') %> atrás</div>
    </p>
  </div>
  <div class="recipe-actions">
    <% if logged_in? && (current_chef == @recipe.chef || current_chef.admin?) %>
      <%= link_to "Editar", edit_recipe_path(@recipe), class: "btn btn-xs btn-warning" %>
      <%= link_to "Excluir", recipe_path(@recipe), method: :delete,
        data: { confirm: "Tem certeza de que deseja excluir esta postagem?" },
        class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "Voltar à postagens", recipes_path, class: "btn btn-xs btn-primary" %>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3 class="page-label">Comentários: </h3>
      <hr />
      <%= form_for([@recipe, @comment], :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :description, "Comentar" %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Digite o seu comentário aqui..." %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit "Enviar", class: "btn btn-primary btn-lg btn-xlarge" %>
          </div>
        </div>
      <% end %>
      <hr />
    </div>
  </div>
<% end %>

<% if @recipe.comments.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3 class="page-label">Comentários anteriores: </h3>
        <div id="messages">
          <%= render partial: 'comments/comments', object: @comments %>
        </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3 class="page-label">Nenhum comentário ainda!</h3>
    </div>
  </div>
<% end %>
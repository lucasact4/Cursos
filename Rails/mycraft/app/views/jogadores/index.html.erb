<div class="background">
  <div class="inner-div">
    <%= render 'shared/page_title', title: "Mostrando todos os jogadores" %>
    
    <div align="center">
      <%= will_paginate %>
      <% @jogadores.each do |jogador| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li><%= link_to gravatar_for(jogador), jogador_path(jogador) %></li>
              <li class="jogador-title"><%= link_to jogador.jogadorname.capitalize, jogador_path(jogador) %></li>
              <li>
                <small>
                  <% if jogador.postagens.count == 1 %>
                    <%= "#{jogador.postagens.count} postagem" %>
                  <% else %>
                    <%= "#{jogador.postagens.count} postagens" %>
                  <% end %>
                </small>
              </li>
              <% if logged_in? && current_jogador.admin? && !jogador.admin? %>
                <li class="button-edit"><%= link_to "Excluir jogador", jogador_path(jogador), method: :delete,
                      data: {confirm: "Tem certeza de que deseja excluir o jogador e todas as postagens associadas?"} %></li>
              <% end %>
            </div>
          </div>
        </ul>
      <% end %>
      <%= will_paginate %>
    </div>
  </div>
</div>
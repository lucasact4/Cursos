<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

<%= render "navbar"%>
<div class="row">

  <div class="col s3">
    <%= render "sidenav"%>
  </div>   

  <div class="col s9">

    <div class="row">
      <div class="col s12" style="margin-top: 20px;">
        <%= link_to "Home", home_index_path, :method => "get", class: "breadcrumb grey-text text-darken-4" %>
        <%= link_to "Treinamento", treinamento_home_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
        <%= link_to "Botões", buscaelementos_botoes_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
      </div>
    </div>

    <div class="tamanhodiv">
      <div class="row">
        <div class="col s6">
          <h5>Botões</h5>
        </div>
        <div class="col s6">
          <h5>Mensagens de Sucesso!</h5>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <div class="row">
          <h5 class="col s4">Raised</h5>
          <a  id="teste" class="waves-light btn" onclick="ativaedesativa1()" ><i class="material-icons left">cloud</i>button</a>
        </div>
      </div>
      <div class="col s4">
        <div id="div1" style="display:none"><h5>Você Clicou no Botão!</h5></div>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <div class="row">
          <h5 class="col s4">Floating</h5>
          <a class="btn-floating btn-large waves-light red" onclick="ativaedesativa2()"><i class="material-icons">add</i></a>
        </div>
      </div>
        <div class="col s6">
          <div id="div2" style="display:none"><h5>Você Clicou no Botão!</h5></div>
        </div>
    </div>

    <div class="row">
      <div class="col s6">
        <div class="row">
          <h5 class="col s4">Flat</h5>
          <a class="waves-teal btn-flat" onclick="ativaedesativa3()">Button</a>
        </div>
      </div>
      <div class="col s6">
        <div id="div3" style="display:none"><h5>Você Clicou no Botão!</h5></div>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <div class="row">
          <h5 class="col s4">Submmit</h5>
          <button class="btn waves-light" onclick="ativaedesativa4()" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
      <div class="col s6">
        <div id="div4" style="display:none"><h5>Você Clicou no Botão!</h5></div>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <div class="row">
          <h5 class="col s4">Disable</h5>
          <a class="btn-large disabled">Button</a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="center">
        <%= link_to "Voltar", treinamento_home_path, :method => "get", class:  "btn red"%>
      </div>
    </div>
    
  </div>
  
</div>


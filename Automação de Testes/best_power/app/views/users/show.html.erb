<!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

<%= render "navbar"%>
<div class="row">

  <div class="col s3">
    <%= render "sidenav"%>
  </div>   

  <div class="col s9">

    <div class="row">
      <div class="col s12" style="margin-top: 20px;">
        <%= link_to "Home", home_index_path, :method => "get", class: "breadcrumb grey-text text-darken-4" %>
        <%= link_to "Treinamento", treinamento_home_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
      </div>
    </div>


    <div class="row center">
      <div class="col s4"></div>
      <div class"col s2 center">
        <p id="notice" class="light-green accent-2"><%= notice %></p>
      </div>
      <div class="col s4"></div>
    </div>
     
    <div class="row">
      <div class="col s12 center">
        <p>
          <strong>Nome:</strong>
          <%= @user.name %>
        </p>
        
        <p>
          <strong>Ultimo Nome:</strong>
          <%= @user.lastname %>
        </p>
        
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
        
        <p>
          <strong>Univercidade:</strong>
          <%= @user.university %>
        </p>
        
        <p>
          <strong>Gênero:</strong>
          <%= @user.gender %>
        </p>
        
        <p>
          <strong>Profissão:</strong>
          <%= @user.profile %>
        </p>
        
        <p>
          <strong>Idade:</strong>
          <%= @user.age %>
        </p>
        
        <p>
          <strong>Address:</strong>
          <%= @user.address %>
        </p>
        
        <%= link_to 'Editar', edit_user_path(@user), class: "btn waves-light blue" %> |
        <%= link_to 'Voltar', users_path , class: "btn waves-light red"%>

      </div>

    </div>

  </div>

</div>


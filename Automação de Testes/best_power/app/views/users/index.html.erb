<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

 <%= render "navbar"%>
 
 <div class="container">
 
     <div class="row">
       <div class="col s12" style="margin-top: 20px;">
         <%= link_to "Home", home_index_path, :method => "get", class: "breadcrumb grey-text text-darken-4" %>
         <%= link_to "Treinamento", treinamento_home_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
         <%= link_to "Lista de Usuários", users_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
       </div>
     </div>
 
     <div class="row">
       <div class="tamanhodiv2">
         <h5 class="center">Lista de Usuários!!</h5>
       </div>
     </div>
 
     <div class="row">
       <div class="center">
         <%= link_to 'Novo Usuário', new_user_path , class: "btn waves-light green"%>
         <%= link_to "Voltar", treinamento_home_path, :method => "get", class:  "btn red"%>
       </div>
     </div>
 
 </div>

 <div class="row">
    <div class="center col s10 offset-s1">
     <p id="notice"><%= notice %></p>
      <table class="highlight striped responsive-table">
        <thead>
          <tr>
            <th class="center">Nome</th>
            <th class="center">Último Nome</th>
            <th class="center">Email</th>
            <th class="center">Universidade</th>
            <th class="center">Sexo</th>
            <th class="center">Profissão</th>
            <th class="center">Idade</th>
            <th class="center">Endereço</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>
      
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.lastname %></td>
              <td><%= user.email %></td>
              <td><%= user.university %></td>
              <td><%= user.gender %></td>
              <td><%= user.profile %></td>
              <td><%= user.age %></td>
              <td class="td_quebra"><%= user.address %></td>
              <td><%= link_to 'search', user, class: "material-icons"%></td>
              <td><%= link_to 'edit', edit_user_path(user), class: "material-icons"%></td>
              <td><%= link_to 'delete', user, method: :delete, class: "material-icons", data: { confirm: 'Vocee está certo disso?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%=  paginate @users  %>

    </div>
  </div>


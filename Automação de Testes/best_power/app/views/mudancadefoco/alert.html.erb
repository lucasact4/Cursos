      <div class="center">
        <div class='example'>
          <h3>JavaScript Alerts</h3>
          <p>Aqui estão alguns exemplos de alertas JavaScript diferentes que podem ser problemáticos para automação</p>
          <ul style='list-style-type: none;'>
            <li><button class="btn  waves-light green" onclick="jsAlert()">Clique para JS Alert</button></li>
            <br></br>
            <li><button class="btn  waves-light green" onclick="jsConfirm()">Clique para JS Confirm</button></li>
            <br></br>
            <li><button  class="btn  waves-light green" onclick="jsPrompt()">Clique para JS Prompt</button></li>
          </ul>
          <h4>Result:</h4>
          <p id='result' style='color:green'></p>
        </div>
  
        <div class="row">
        <div class="center">
        <%= link_to "Voltar", treinamento_home_path, :method => "get", class: "btn red"%>
        </div>
        </div>
      
      </div>

    </div>

  </div>
</div>


<script>
  function jsAlert() {
    alert('Eu sou um alerta JS!');
    log('Você clicou no alerta com sucesso!!');
  }

  function jsConfirm() {
    var c = confirm('Eu sou uma confirmação JS!');
    var result = c === true ? 'Ok' : 'Cancel';
    log('Você clicou: ' + result);
  }

  function jsPrompt() {
    var p = prompt('Eu sou um  prompt JS!');
    log('Você digitou: ' + p);
  }

  function log(msg) {
    var result = document.getElementById('result');
    result.innerHTML = msg;
  }
</script>

